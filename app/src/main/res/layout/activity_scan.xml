<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScanActivity"
        android:id="@+id/coordinatorLayout">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/tvCode"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:textAlignment="center"
                  android:textSize="72sp"
                  app:layout_constraintBottom_toTopOf="@+id/num2"
        android:text="8936549"/>


        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btnScan"
                android:src="@drawable/barcode_scan"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/num0"
                android:layout_margin="1dp"
                app:layout_constraintTop_toBottomOf="@+id/num7"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num0"
                android:text="0"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnScan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnDel"
                app:layout_constraintTop_toTopOf="@+id/numLine4"
                style="@style/AppTheme.CalcButton"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btnDel"
                android:src="@drawable/ic_backspace"
                android:text="C"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/num0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="1dp"
                app:layout_constraintTop_toTopOf="@+id/numLine4"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num7"
                android:text="7"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/num8"
                app:layout_constraintTop_toTopOf="@+id/numLine3"
                app:layout_constraintBottom_toTopOf="@+id/numLine4"
                style="@style/AppTheme.CalcButton"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num8"
                android:text="8"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/num7"
                app:layout_constraintEnd_toStartOf="@+id/num9"
                app:layout_constraintTop_toTopOf="@+id/numLine3"
                app:layout_constraintBottom_toTopOf="@+id/numLine4"
                style="@style/AppTheme.CalcButton"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num9"
                android:text="9"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/num8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/numLine3"
                app:layout_constraintBottom_toTopOf="@+id/numLine4"
                style="@style/AppTheme.CalcButton"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num4"
                android:text="4"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/num5"
                app:layout_constraintBottom_toTopOf="@+id/numLine3"
                app:layout_constraintTop_toTopOf="@+id/numLine2"
                style="@style/AppTheme.CalcButton"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num5"
                android:text="5"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/num4"
                app:layout_constraintEnd_toStartOf="@+id/num6"
                app:layout_constraintBottom_toTopOf="@+id/numLine3"
                app:layout_constraintTop_toTopOf="@+id/numLine2"
                style="@style/AppTheme.CalcButton"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num6"
                android:text="6"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/num5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/numLine3"
                app:layout_constraintTop_toTopOf="@+id/numLine2"
                style="@style/AppTheme.CalcButton"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num1"
                android:text="1"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/num2"
                app:layout_constraintTop_toTopOf="@+id/NumLine1"
                app:layout_constraintBottom_toTopOf="@+id/numLine2"
                style="@style/AppTheme.CalcButton"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num2"
                android:text="2"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/num1"
                app:layout_constraintEnd_toStartOf="@+id/num3"
                app:layout_constraintTop_toTopOf="@+id/NumLine1"
                app:layout_constraintBottom_toTopOf="@+id/numLine2"
                style="@style/AppTheme.CalcButton"/>

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/num3"
                android:text="3"
                android:onClick="onClickNum"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/num2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/NumLine1"
                app:layout_constraintBottom_toTopOf="@+id/numLine2"
                style="@style/AppTheme.CalcButton"/>

        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/NumLine1"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.4"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/numLine2"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.55"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/numLine3"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.7"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/numLine4"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.85"/>


    </android.support.constraint.ConstraintLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/scanLoader"
                 android:visibility="gone"
                 android:clickable="true">

        <View android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000"
              android:alpha="0.4">
        </View>
        <com.eyalbira.loadingdots.LoadingDots
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:LoadingDots_dots_color="@color/colorLoader"
                app:LoadingDots_dots_count="9"
                app:LoadingDots_jump_height="24dp"
                app:LoadingDots_dots_space="4dp"/>

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
