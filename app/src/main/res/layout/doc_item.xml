<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/docCard"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/docName"
                  android:text="Документ"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:textColor="@color/colorDark"/>
       <!-- <SurfaceView android:layout_width="0dp"
                     android:layout_height="0dp"
                     android:id="@+id/docNoise"
                     app:layout_constraintTop_toTopOf="@id/docName"
                     app:layout_constraintBottom_toBottomOf="@id/docName"
                     app:layout_constraintLeft_toLeftOf="@id/docName"
                     app:layout_constraintRight_toRightOf="@id/docName"/>-->
        <!--<SurfaceView android:layout_width="0dp"
                     android:layout_height="0dp"
                     android:id="@+id/docNoise1"
                     app:layout_constraintTop_toTopOf="@id/docName"
                     app:layout_constraintBottom_toBottomOf="@id/docName"
                     app:layout_constraintLeft_toLeftOf="@id/docName"
                     app:layout_constraintRight_toRightOf="@id/docName"/>-->



        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/docDateIssue"
                  android:text="Дата выдачи:"
                  android:textAlignment="center"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/docName"
                  app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toStartOf="@+id/docDateExpiration"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/docDateExpiration"
                  android:text="Дата окончания: "
                  android:textAlignment="center"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/docName"
                  app:layout_constraintStart_toEndOf="@+id/docDateIssue"
                  app:layout_constraintHorizontal_bias="0.5"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
